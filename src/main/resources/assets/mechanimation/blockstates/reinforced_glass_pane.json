{
    "multipart": [
        {   "apply": { "model": "mechanimation:pane/reinforced_glass/post" }},
        {   "when": { "north": true },
            "apply": { "model": "mechanimation:pane/reinforced_glass/side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "mechanimation:pane/reinforced_glass/side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "mechanimation:pane/reinforced_glass/side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "mechanimation:pane/reinforced_glass/side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "mechanimation:pane/reinforced_glass/noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "mechanimation:pane/reinforced_glass/noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "mechanimation:pane/reinforced_glass/noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "mechanimation:pane/reinforced_glass/noside", "y": 270 }
        }
    ]
}
