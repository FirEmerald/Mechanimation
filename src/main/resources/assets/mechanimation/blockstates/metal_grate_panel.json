{
    "multipart": [
        {   "apply": { "model": "mechanimation:panel/metal_grate/post_ends" }},
        {   "when": { "north": false, "east": false, "south": false, "west": false },
            "apply": { "model": "mechanimation:panel/metal_grate/post" }
        },
        {   "when": { "north": true, "east": false, "south": false, "west": false },
            "apply": { "model": "mechanimation:panel/metal_grate/cap" }
        },
        {   "when": { "north": false, "east": true, "south": false, "west": false },
            "apply": { "model": "mechanimation:panel/metal_grate/cap", "y": 90 }
        },
        {   "when": { "north": false, "east": false, "south": true, "west": false },
            "apply": { "model": "mechanimation:panel/metal_grate/cap_alt" }
        },
        {   "when": { "north": false, "east": false, "south": false, "west": true },
            "apply": { "model": "mechanimation:panel/metal_grate/cap_alt", "y": 90 }
        },
        {   "when": { "north": true },
            "apply": { "model": "mechanimation:panel/metal_grate/side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "mechanimation:panel/metal_grate/side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "mechanimation:panel/metal_grate/side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "mechanimation:panel/metal_grate/side_alt", "y": 90 }
        }
    ]
}
